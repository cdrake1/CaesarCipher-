open System

let ascii(a: char) =

    Convert.ToInt32(a)
    
let fix(b: int) =

    Convert.ToChar(b)

let rec Encrypt (testOne: string) (shiftB: int) (j: int) = 
    
    let asciiArray = testOne.ToCharArray() |> Array.map ascii
    
    let L = asciiArray.Length 
    
    printfn "%d" L
    
    if (asciiArray.[j] >= 97) && (asciiArray.[j] <= 122) then
        printfn "%A" asciiArray.[j]
    
    
    if (j < L) then
        asciiArray |> Array.map fix
        Encrypt (asciiArray.ToString()) shiftB (j + 1)

    
    

let CaesarCipher() =

    let testString = "Bugs Bunny"
    let shiftA = 7
    let test = testString.ToLower()
    let i = 0
    
    Encrypt test shiftA i

    
CaesarCipher()